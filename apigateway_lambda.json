{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Transform" : "AWS::Serverless-2016-10-31",
  "Resources" : {
    "SampleRestApi" : {
      "Type" : "AWS::ApiGateway::RestApi",
      "Properties" : {
        "Description" : "This is Sample Rest API",
        "Name" : "Sample"
      }
    },
    "V1Resource" : {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId" : { "Ref": "SampleRestApi" },
        "ParentId" : { "Fn::GetAtt": ["SampleRestApi", "RootResourceId"] },
        "PathPart": "v1"
      }
    },
    "RubyResource" : {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId" : { "Ref": "SampleRestApi" },
        "ParentId" : { "Ref": "V1Resource" },
        "PathPart": "ruby"
      }
    },
    "AnnotateResource" : {
      "Type": "AWS::ApiGateway::Resource",
      "Properties": {
        "RestApiId" : { "Ref": "SampleRestApi" },
        "ParentId" : { "Ref": "RubyResource" },
        "PathPart": "annotate"
      }
    },

    "SampleMethod" : {
      "Type" : "AWS::ApiGateway::Method",
      "Properties" : {
        "RestApiId" : { "Ref" : "SampleRestApi" },
        "ResourceId" : { "Ref" : "AnnotateResource" },
        "HttpMethod" : "POST",
        "AuthorizationType" : "NONE",
        "Integration" : { 
          "Type" : "MOCK"
        },
        "MethodResponses" : [ 
          { "StatusCode" : "200" }
        ]
      },
      "DependsOn": "LambdaPermission"
    },
    "LambdaPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": "lambda-python",
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com"
      }
    },
    "SampleDeployment" : {
      "Type" : "AWS::ApiGateway::Deployment",
      "DependsOn" : "SampleMethod",
      "Properties" : {
        "Description" : "This is Sample Deployment",
        "RestApiId" : { "Ref" : "SampleRestApi" },
        "StageName" : "prd",
        "StageDescription" : {
          "Description" : "Prod Stage",
          "MethodSettings" : [{
            "ResourcePath" : "/v1/ruby/annotate",
            "HttpMethod" : "POST",
            "MetricsEnabled" : "true",
            "DataTraceEnabled" : "true"
          }]
        }
      }
    },
    "lambdaadd" : {
      "Type" : "AWS::Serverless::Function",
      "Properties": {
        "Handler": "lambda_function.lambda_handler",
        "Runtime": "python3.8",
        "CodeUri": "s3://testtesttsettes/lambda_function.zip"
      }
    }
  }
}